html, body {
  padding: 0;
  margin: 0;
}

body {
  font-family: 'Roboto', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
  color: $textColor;
}

.page {
  h1 {
    margin-bottom: 2rem;
    border-bottom: 1px solid lightgray;
  }

  h2 {
    margin-top: 3rem;
    margin-bottom: 2rem;
  }

  p {
    line-height: 2;
  }
}

// These will be the new default font styles after transitioning to new design sitewide
.home, .nav {
  font-family: $fontFamily;

  h1, h2, h3, h4, h5, h6, p {
    font-family: $fontFamily;
  }

  h1 {
    font-size: 54px;
    line-height: 54px;
    @media (min-width: $grid-breakpoints.xl) {
      font-size: 68px;
      line-height: 68px;
    }
  }

  h1, h2 {
    border-bottom: none;
    font-weight: 500;
  }

  h2 {
    font-size: 44px;
    line-height: 48px;
  }

  h3 {
    font-weight: 500;
    font-size: 28px;
    line-height: 34px;
  }

  p {
    font-size: 18px;
    line-height: 28px;
    font-weight: 400;
  }
}

h1, h2, h3, h4, h5, h6 {
  position: relative;
  margin-top: 1.5em;
  margin-bottom: 0.5em;

  .header-anchor {
    opacity: 0 !important;
    position: absolute;
    left: -23px;
    width: 100%;
  }

  &:hover {
    .header-anchor {
      opacity: 1 !important;
    }
  }
}

a {
  text-decoration: none;
}

.nav-links {
  color: black;
}

.menu-mode {
  background-color: white;
}

section {
  padding: 0 8px;

  @media (min-width: $grid-breakpoints.lg) {
    padding: 0;
  }

  &.wide-section {
    padding: 0;
  }
}

// Vuetify overwrites
.v-application {
  code {
    background: #272822;
    box-shadow: none;
    color: black;
  }
}

.v-application--is-ltr .v-treeview-node--leaf {
  margin-left: 0;
}

.colorDark {
  color: #444444;
}

.colorGreyed {
  color: #707070;
}

.colorDark2 {
  color: #373A36;
}

